<div class="col-sm-12 col-xl-6" style="width:100%">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">FAQ</h6>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Question)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Answer)</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 1;
                }
                @foreach (var item in Model) {
                <tr>
                    <th scope="row">@count</th>
                        <td>@Html.DisplayFor(modelItem => item.Question)</td>
                        <td>@Html.DisplayFor(modelItem => item.Answer)</td>
                    <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-danger rounded-pill m-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-danger rounded-pill m-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger rounded-pill m-2">Delete</a>
                            <a asp-action="Create" asp-route-id="@item.Id" type="button" class="btn btn-danger rounded-pill m-2">Create</a>


                    </td>
                </tr>
                count++;
                }
               
            </tbody>
        </table>
    </div>
</div>
