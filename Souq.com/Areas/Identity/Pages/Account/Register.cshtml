<section class="register section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-12 col-xs-12">
                <div class="register-form login-area">
                    <h3>
                        Register
                    </h3>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-form">
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-user"></i>
                                <input asp-for="Input.UserName" type="text" id="Name" class="form-control"  placeholder="User name" autocomplete="username" aria-required="true">

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-envelope"></i>
                                <input asp-for="Input.Email" type="text" id="sender-email" class="form-control"  autocomplete="Email" placeholder="Email Address" aria-required="true">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Retype Password" autocomplete="new-password" aria-required="true">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                       
                        <div class="text-center">
                            <button id="registerSubmit" type="submit" class="btn btn-common log-btn">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>