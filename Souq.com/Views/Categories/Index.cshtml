<div class="col-sm-12 col-xl-6" style="width:100%">
   
    <div class="bg-secondary rounded h-100 p-4">
         <p>
        <a asp-action="Create" style="color:red">Create New</a>
         </p>
        <h6 class="mb-4">Categories</h6>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 1;
                }
                @foreach (var item in Model) {
                <tr>
                    <th scope="row">@count</th>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <div class="col-sm-12 col-xl-6">
                                <div class="bg-secondary rounded h-100 p-4">

                                    <div class="btn-group" role="group">
                                        <a a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </td>

                    
                </tr>
                count++;
                }
                
            </tbody>
        </table>
    </div>
</div>
